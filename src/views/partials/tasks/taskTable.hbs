<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each tasks}}
        <tr>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>
                <button>Done</button>
                <a href="/edit/{{_id}}">Edit</a>
                <button>Delete</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>


