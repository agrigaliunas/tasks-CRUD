<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card bg-black">
        <div class="card-body">
          <h1 class="text-white">Edit task</h1>

          <form action="/tasks/{{task._id}}/edit" method="POST">
            <div class="mb-3">
              <input
                class="form-control"
                type="text"
                name="title"
                placeholder="Title"
                value="{{task.title}}"
              />
            </div>
            <div class="mb-3">
              <textarea
                class="form-control"
                name="description"
                rows="3"
                placeholder="Add a Description"
              >{{task.description}}</textarea>
            </div>
            <button class="btn btn-primary" type="submit">Edit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>